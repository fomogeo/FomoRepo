{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_SITE_NAME": "FOMO Finds",
    "NEXT_PUBLIC_SITE_TAGLINE": "Don't Miss What Everyone Is Buying"
  },
  "crons": [
    {
      "path": "/api/cron/update-products",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/update-prices",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/refresh-trending",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/generate-blog-post",
      "schedule": "0 9 * * 1,3,5"
    },
    {
      "path": "/api/cron/social-media-post",
      "schedule": "0 */2 * * *"
    }
  ]
}
